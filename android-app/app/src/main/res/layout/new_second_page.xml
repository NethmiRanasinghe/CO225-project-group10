<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <Button
        android:id="@+id/btnDiscoverableONOFF"
        android:layout_width="164dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/scanAvailable"
        android:background="@drawable/rounded_cornerbutton"
        android:onClick="btnEnableDisable_Discoverable"
        android:text="Enable Discovery"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/scanAvailable"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_cornerbutton"
        android:onClick="btnDiscover"
        android:text="Scan Nearby Devices"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <ListView
        android:id="@+id/pairedDeviceList"
        android:layout_width="412dp"
        android:layout_height="258dp"

        android:layout_above="@+id/availableDeviceList"
        android:layout_marginBottom="47dp"
        android:dividerHeight="2dp" />

    <ListView
        android:id="@+id/availableDeviceList"
        android:layout_width="match_parent"
        android:layout_height="256dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:dividerHeight="2dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/availableDeviceList"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="11dp"
        android:text="AVAILABLE DEVICES"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="133dp"
        android:layout_height="21dp"
        android:layout_below="@+id/btnDiscoverableONOFF"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="135dp"
        android:text="PAIRED DEVICES"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>