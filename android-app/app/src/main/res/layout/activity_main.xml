<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/btnOnOff"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="ON/OFF" />

    <Button
        android:id="@+id/btnDiscoverableONOFF"
        android:layout_width="196dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/btnOnOff"
        android:onClick="btnEnableDisable_Discoverable"
        android:text="Enable Discoverability" />

    <Button
        android:id="@+id/btnFindUnpairedDevices"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOnOff"
        android:layout_marginTop="38dp"
        android:onClick="btnDiscover"
        android:text="Discover" />

    <ListView
        android:id="@+id/lvNewDevices"
        android:layout_width="395dp"
        android:layout_height="134dp"
        android:layout_below="@id/btnFindUnpairedDevices"
        android:layout_marginTop="38dp"></ListView>

    <Button
        android:id="@+id/btnStartConnection"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDiscoverableONOFF"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@+id/btnFindUnpairedDevices"
        android:text="Start Connection" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter Text Here"
        android:layout_below="@+id/lvNewDevices"
        android:layout_alignParentStart="true"
        android:id="@+id/editText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/btnSend"
        android:layout_toRightOf="@+id/editText"
        android:layout_below="@+id/lvNewDevices"/>

    <TextView
        android:layout_marginTop="10dp"
        android:text="Incoming messages"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:id="@+id/incomingMessage"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>